{
  "name": "cardano-devkit-vscode",
  "displayName": "cardano-devkit-vscode",
  "description": "A VSCode extension for cardano development",
  "publisher": "cardano-devkit",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/cardano-foundation/cardano-devkit"
  },
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "license": "SEE LICENSE IN LICENSE",
  "rootDir": "./",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cardano-extension.analyzeScriptJSON",
        "title": "Analyze Script (JSON data type)"
      },
      {
        "command": "cardano-extension.analyzeScriptMesh",
        "title": "Analyze Script (Mesh data type)"
      }
    ],
    "snippets": [
      {
        "language": "typescript",
        "path": "./snippets/mesh/mesh-txbuilder.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/mesh/mesh-wallet-hooks.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/mesh/mesh-blueprint-utils.json"
      },
      {
        "language": "aiken",
        "path": "./snippets/aiken/aiken-helloworld.json"
      },
      {
        "language": "aiken",
        "path": "./snippets/vodka/vodka-helloworld.json"
      },
      {
        "language": "rust",
        "path": "./snippets/whiskey/whiskey-helloworld.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.9.0",
    "@types/vscode": "^1.65.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  }
}