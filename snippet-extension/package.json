{
  "name": "cardano-dev-snippet",
  "displayName": "cardano-dev-snippet",
  "description": "A snippet extension for cardano development",
  "publisher": "cardano-dev-snippet",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "rootDir": "./",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cardano-extension.readFile",
        "title": "Read File"
      }
    ],
    "snippets": [
      {
        "language": "typescript",
        "path": "./snippets/meshsdk-txbuilder.json"
      },
      {
        "language": "typescript",
        "path": "./snippets/meshsdk-wallet-hooks.json"
      },
      {
        "language": "aiken",
        "path": "./snippets/meshsdk-wallet-hooks.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.9.0",
    "@types/vscode": "^1.65.0",
    "@typescript-eslint/eslint-plugin": "^8.10.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.13.0",
    "typescript": "^5.6.3"
  }
}
